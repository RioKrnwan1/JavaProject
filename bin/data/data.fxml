<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="data.DataController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Data User">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Text>
      
      <VBox alignment="CENTER" maxHeight="400.0" maxWidth="600.0" minHeight="328.0" minWidth="600.0" prefHeight="328.0" prefWidth="600.0">
         <children>
            <TableView fx:id="tableUser" editable="true" maxHeight="400.0" maxWidth="600.0" minHeight="332.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: #CCCCCC; -fx-border-width: 1px; -fx-border-radius: 5px;" tableMenuButtonVisible="true">
               <columns>
                  <TableColumn fx:id="colId" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" resizable="false" text="ID" />
                  <TableColumn fx:id="colUsername" maxWidth="260.0" minWidth="260.0" prefWidth="260.0" resizable="false" text="Username" />
                  <TableColumn fx:id="colPassword" maxWidth="260.0" minWidth="260.0" prefWidth="260.0" resizable="false" text="Password" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      
      <Button fx:id="btnKembali" mnemonicParsing="false" onAction="#btnKembali" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #4DA6FF; -fx-background-radius: 10px;" text="Kembali" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
