<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tambahmatkul.AddMatkulController">
   <children>
      <VBox alignment="CENTER" maxWidth="400.0" minWidth="400.0" prefHeight="392.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 20px;">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <effect>
            <DropShadow>
               <color>
                  <Color red="0.75789475440979" green="0.75789475440979" blue="0.75789475440979" />
               </color>
            </DropShadow>
         </effect>
         <children>
            <Label alignment="CENTER" text="Tambah Matkul">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <VBox prefHeight="56.0" prefWidth="329.0">
               <VBox.margin>
                  <Insets left="70.0" right="70.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
               <children>
                  <Label contentDisplay="RIGHT" text="KODE MATKUL:">
                     <VBox.margin>
                        <Insets top="-20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="kodeMatkul" prefHeight="38.0" prefWidth="332.0" promptText="Masukkan kode matkul" style="-fx-background-radius: 5px;" />
               </children>
            </VBox>
            <VBox prefHeight="56.0" prefWidth="346.0">
               <padding>
                  <Insets top="20.0" />
               </padding>
               <children>
                  <Label contentDisplay="RIGHT" text="NAMA MATKUL:">
                     <VBox.margin>
                        <Insets top="-20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="namaMatkul" prefHeight="38.0" prefWidth="332.0" promptText="Masukkan kode matkul" style="-fx-background-radius: 5px;" />
               </children>
               <VBox.margin>
                  <Insets left="70.0" right="70.0" top="15.0" />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="56.0" prefWidth="329.0">
               <padding>
                  <Insets top="20.0" />
               </padding>
               <children>
                  <Label contentDisplay="RIGHT" text="SKS:">
                     <VBox.margin>
                        <Insets top="-20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="sks" prefHeight="38.0" prefWidth="332.0" promptText="Masukkan jumlah sks" style="-fx-background-radius: 5px;" />
               </children>
               <VBox.margin>
                  <Insets left="70.0" right="70.0" top="15.0" />
               </VBox.margin>
            </VBox>
            <Label fx:id="Notif" visible="false">
               <VBox.margin>
                  <Insets bottom="7.0" top="5.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Lihat data Matkul?">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#otwMatkul" prefHeight="26.0" prefWidth="66.0" style="-fx-background-color: transparent; -fx-text-fill: #4DA6FF; -fx-underline: true; -fx-cursor: hand;" text="Matakul">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <Button fx:id="btnTambah" mnemonicParsing="false" onAction="#btnTambah" prefHeight="38.0" prefWidth="98.0" style="-fx-background-color: #4DA6FF; -fx-background-radius: 10px;" text="TAMBAH" textFill="#fffdfd">
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
